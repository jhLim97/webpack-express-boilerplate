{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended", "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],  
    "ignorePatterns": ["node_modules/"],
    "rules": { 
        "prettier/prettier": [
            "error",
            { 
                "endOfLine": "auto"
            }
        ]
    }
}
